{
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "outDir": "./lib",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["mocha"]
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "./lib",
    "node_modules"
  ]
}
